{
  "name": "shared-configs",
  "description": "Guild's shared configs following our styleguide",
  "repository": "git@github.com:the-guild-org/shared-config.git",
  "author": {
    "name": "The Guild",
    "url": "https://the-guild.dev"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "2.24.4",
    "@changesets/changelog-github": "0.4.6",
    "@shopify/eslint-plugin": "41.3.1",
    "@types/eslint": "8.4.6",
    "@types/node": "16.11.58",
    "eslint": "8.23.0",
    "eslint-plugin-n": "15.2.5",
    "eslint-remote-tester": "2.1.4",
    "patch-package": "6.4.7",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "scripts": {
    "postinstall": "patch-package",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint:remote": "eslint-remote-tester",
    "prettier": "prettier --ignore-path .gitignore --write --list-different .",
    "release": "changeset publish"
  }
}
